<div class="transparent_section">
  <h2>Editar Informações</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mt-3">
      <%= f.label :nome %><br />
      <%= f.text_field :name, autofocus: true, class: 'form-control' %>
    </div>

    <div class="field mt-3">
      <%= f.label :email %><br />
      <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
    </div>

    <div class="field mt-3">
      <%= f.label :idade %><br />
      <%= f.number_field :age, min: 0, step: 1, class: 'form-control' %>
    </div>

    <div class="field mt-3">
      <%= f.label :senha %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caracteres mínimos)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="field mt-3">
      <%= f.label :confirme_sua_senha %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="field mt-3">
      <%= f.label :foto_de_perfil %><br />
      <%= f.file_field :avatar, class: 'form-control' %>
    </div>

    <div class="actions mt-3 mb-3">
      <%= f.submit "Atualizar", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <h3>Cancelar Conta</h3>

  <p>Infeliz? :( <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Tem certeza?" }, method: :delete, class: 'btn btn-danger' %></p>

  <%= link_to "Voltar", :back %>
</div>
