<div class="div_center mt-4 pt-4">
  <div class="transparent_section">
    <h2>Cadastro</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mt-3">
        <%= f.label :nome %><br />
        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
      </div>

      <div class="field mt-3">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="field mt-3">
        <%= f.label :idade %><br />
        <%= f.number_field :age, min: 0, step: 1, class: 'form-control' %>
      </div>

      <div class="field mt-3">
        <%= f.label :senha %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres m√≠nimos)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="field mt-3">
        <%= f.label :confirme_sua_senha %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="field mt-3">
        <%= f.label :foto_de_perfil %><br />
        <%= f.file_field :avatar, class: 'form-control' %>
      </div>

      <div class="actions mt-2 mb-2">
        <%= f.submit "Me cadastrar", class: 'btn btn-success' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>